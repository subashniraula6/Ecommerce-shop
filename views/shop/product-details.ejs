<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <h1>Product Details</h1>
                <div class="grid">
                    <article class="card product-item large">
                        <header class="card__header">
                            <h1 class="product__title large-header">
                                <%= product.title %>
                            </h1>
                        </header>
                        <div class="card__image large">
                            <img src="/<%= product.imageUrl %>" alt="A Book">
                        </div>
                        <div class="card__content large">
                            <h2 class="product__price">$<%= product.price %>
                            </h2>
                            <p class="product__description large">
                                <%= product.description %>
                            </p>
                        </div>
                        <% if(isAuthenticated) { %>
                            <div class="card__actions">
                                <form action="/cart" method="POST">
                                    <input type="hidden" name='_csrf' value="<%= csrfToken %>" >
                                    <button type='submit' class="btn">Add to Cart</button>
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                </form>
                            </div>
                            <% } %>
                    </article>
                </div>
            </main>
    </body>

    <%- include('../includes/end.ejs') %>